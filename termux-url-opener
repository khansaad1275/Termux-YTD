echo -e "\e[031m" "    
echo -e "\e[036m" "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"                                                                          
echo -e "\e[032m" "â•‘ â™š Project Name : YouTube Downloader
echo -e "\e[032m" "â•‘ â™š Author : Mantu Kumar

echo -e "\e[032m" "â•‘ â™š  
echo -e "\e[032m" "â•‘ â™š
echo -e "\e[036m" "â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo -e "\e[036m" "â• â•â–¶ [ð—¦ð—²ð—¹ð—²ð—°ð˜ ð—” ð—™ð—¼ð—¿ð—ºð—®ð˜]  âž³"
echo -e "\e[032m" "â• â•â–¶ 1. Music Mp3â™«"
echo -e "\e[032m" "â• â•â–¶ 2. Video 360p"
