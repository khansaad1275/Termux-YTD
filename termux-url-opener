
# COLORS
GREEN="\e[32m"
CYAN="\e[36m"
MAGENTA="\e[35m"
YELLOW="\e[33m"
BLUE="\e[34m"
RED="\e[31m"

# BOLD COLORS
GREEN_B="\e[01;32m"
CYAN_B="\e[01;36m"
MAGENTA_B="\e[01;35m"
YELLOW_B="\e[01;33m"
BLUE_B="\e[01;34m"
RED_B="\e[01;31m"

# RESET
RESET="\e[0m"

clear
command -v yt-dlp || printf "${RED_B} Please install yt-dlp manually or run the the install.sh script again.\n${RESET}"
OUTPUT_PATH="/storage/emulated/0/Youtube"

echo -e "${RED}" "          â–„â–€â–„     â–„â–€â–„"
echo -e "${RED}" "         â–„â–ˆâ–‘â–‘â–€â–€â–€â–€â–€â–‘â–‘â–ˆâ–„"
