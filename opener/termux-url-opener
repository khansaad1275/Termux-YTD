#!/data/data/com.termux/files/usr/bin/bash

clear
kill_color=$'\e[0m'
command -v yt-dlp &>/dev/null || printf "\e[031m Please install yt-dlp manualy or run the the install.sh script again.\n$kill_color"


echo -e "\e[031m" "          â–„â–€â–„     â–„â–€â–„"
echo -e "\e[031m" "         â–„â–ˆâ–‘â–‘â–€â–€â–€â–€â–€â–‘â–‘â–ˆâ–„"
echo -e "\e[031m" "     â–„â–„  â–ˆâ–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–ˆ  â–„â–„"
echo -e "\e[031m" "    â–ˆâ–„â–„â–ˆ â–ˆâ–‘â–‘â–ˆâ–‘â–‘â”¬â–‘â–‘â–ˆâ–‘â–‘â–ˆ â–ˆâ–„â–„â–ˆ"
echo -e "\e[036m" "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"                                                                          
echo -e "\e[032m" "â•‘ â™š Project Name : ğŸ†ƒğŸ…´ğŸ†ğŸ…¼ğŸ†„ğŸ†‡-ğŸ†ˆğŸ†ƒğŸ…³â„¢           â•‘"
echo -e "\e[032m" "â•‘ â™š Author : KhanSaad1275                â•‘"
echo -e "\e[032m" "â•‘ â™š Github : gÌ²iÌ²tÌ²hÌ²uÌ²bÌ².Ì²cÌ²oÌ²mÌ²/Ì²kÌ²hÌ²aÌ²nÌ²sÌ²aÌ²aÌ²dÌ²1Ì²2Ì²7Ì²5Ì²/Ì²    â•‘"
echo -e "\e[032m" "â•‘ â™š Website : www.LearnTermux.tech       â•‘"
echo -e "\e[036m" "â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo -e "\e[036m" "â• â•â–¶ [ğ—¦ğ—²ğ—¹ğ—²ğ—°ğ˜ ğ—” ğ—™ğ—¼ğ—¿ğ—ºğ—®ğ˜]  â³"
echo -e "\e[032m" "â• â•â–¶ 1. Music Mp3â™«"
echo -e "\e[032m" "â• â•â–¶ 2. Video 360p"
echo -e "\e[032m" "â• â•â–¶ 3. Video 480p"
echo -e "\e[032m" "â• â•â–¶ 4. Video 720p"
echo -e "\e[032m" "â• â•â–¶ 5. Video 1080p"
echo -e "\e[032m" "â• â•â–¶ 6. Video 2160p (Not Recomended For Most Videos)"
echo -e "\e[032m" "â• â•â–¶ 7. Exit Termux-YTD" # Added

command="-o ~/storage/shared/Youtube/%(title)s.%(ext)s --no-mtime -i "

#Edit From Oak Atsume 
printf "\e[032m â•šâ•:â¤  $kill_color"
read option

if [[ -z $option ]];
then
	clear
	printf "\e[031m Please choose a option!\n$kill_color"
else
case $option in #Make Case list
	1)
    command+="-x --audio-format opus"
	yt-dlp $command $1 #option 1
	;;
	2)
    command+="-f best[height<=360]"
	yt-dlp $command $1 #option 2
	;;
	3)
    command+="-f best[height<=480]"
	yt-dlp $command $1 #option 3
	;;
	4)
    command+="-f best[height<=720]"
	yt-dlp $command $1 #option 4
	;;
	5)
    command+="-f best[height<=1080]"
	yt-dlp $command $1 #option 5
	;;
	6)
    command+="-f best[height<=2160]"
    yt-dlp $command $1 #option 6
	;;
	7)
	break #option 7
	;;
esac 
fi


#There's a cat on the code!!
